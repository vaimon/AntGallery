<resources>

    <style name="Base.Theme.AntGallery" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryContainer">@color/main</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryContainer">@color/secondary</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorTertiary">@color/black</item>
        <item name="colorTertiaryContainer">@color/black</item>
        <item name="colorOnTertiary">@color/white</item>

        <item name="colorError">@color/errorRed</item>
        <item name="colorOnError">@color/white</item>

        <item name="colorSurfaceInverse">@color/darkGray</item>
        <item name="colorOnSurfaceInverse">@color/white</item>
        <item name="colorPrimaryInverse">@color/white</item>
        
        <item name="colorOutline">@color/gray</item>
        <item name="colorOutlineVariant">@color/lightGray</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
    </style>

    <style name="Theme.AntGallery" parent="Base.Theme.AntGallery">
        <item name="android:statusBarColor">?android:attr/colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.RickAndMortyWiki.Splash" parent="Theme.SplashScreen">
        <item name="postSplashScreenTheme">@style/Theme.AntGallery</item>
        <item name="android:windowSplashscreenContent">@drawable/background_logo</item>
    </style>

    <!-- Text -->

    <style name="Theme.AntGallery.Text.Header" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textColor">?attr/colorTertiary</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Theme.AntGallery.Text.ToolbarTip" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/blue</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.AntGallery.Text.Editable.Layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/gray</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="cursorColor">@color/black</item>
        <item name="boxStrokeColor">?attr/colorOutline</item>
        <item name="endIconCheckable">false</item>
        <item name="endIconTint">?attr/colorOutline</item>
        <item name="android:layout_marginVertical">10dp</item>
        <item name="endIconMode">custom</item>
        <item name="errorIconDrawable">@drawable/icon_warning</item>
        <item name="errorIconTint">@color/errorRed</item>
    </style>

    <style name="Theme.AntGallery.Text.Editable.Layout.Password" parent="Theme.AntGallery.Text.Editable.Layout">
        <item name="endIconCheckable">true</item>
        <item name="endIconMode">password_toggle</item>
    </style>

    <style name="Theme.AntGallery.Text.Editable.EditText" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
        <item name="android:padding">12dp</item>
    </style>

    <!-- Buttons -->

    <style name="Theme.AntGallery.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:padding">10dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="elevation">0dp</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>

    <style name="Theme.AntGallery.Button.Primary" parent="Theme.AntGallery.Button">
        <item name="android:backgroundTint">@color/button_background</item>
        <item name="android:textColor">@color/button_foreground</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="Theme.AntGallery.Button.Secondary" parent="Theme.AntGallery.Button">
        <item name="android:backgroundTint">?attr/colorSurface</item>
        <item name="android:textColor">@color/button_outline_foreground</item>
        <item name="strokeColor">@color/button_background</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Theme.AntGallery.Button.Tertiary" parent="Theme.AntGallery.Button">
        <item name="android:backgroundTint">?attr/colorSurface</item>
        <item name="android:textColor">@color/button_outline_foreground</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- NavBar -->
    <style name="Theme.AntGallery.NavBar" parent="Widget.Design.BottomNavigationView">
        <item name ="itemIconTint">@color/icon_foreground</item>
        <item name ="android:background">@drawable/background_bottom_navigation</item>
        <item name ="elevation">0dp</item>
<!--        <item name ="itemActiveIndicatorStyle">?attr/colorPrimary</item>-->
        <item name ="labelVisibilityMode">unlabeled</item>
        <item name ="itemIconSize">26dp</item>
    </style>
</resources>